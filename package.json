{
  "name": "mern",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "keywords": [
    "node",
    "express",
    "mongodb",
    "react",
    "javascript",
    "redux",
    "mern"
  ],
  "author": "Sobia Shahbaz",
  "license": "MIT",
  "engines": {
    "node": "10.3.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "nodemon": "^1.11.0"
  },
  "dependencies": {
    "@google-cloud/logging-winston": "^0.11.1",
    "axios": "^0.16.2",
    "bcrypt": "^3.0.6",
    "cloudinary": "^1.14.0",
    "crypto-js": "^3.1.9-1",
    "dotenv": "^8.0.0",
    "express": "^4.16.3",
    "express-formidable": "^1.2.0",
    "if-env": "^1.0.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "mongoose": "^5.0.17",
    "morgan": "^1.9.1",
    "nodemailer": "^6.2.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "stripe": "^7.1.0",
    "util": "^0.12.0",
    "winston": "2.4.2"
  }
}
